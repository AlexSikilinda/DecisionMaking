@model IEnumerable<DecisionMaking.Models.Result>

@{
    ViewBag.Title = "Result";
}

<h2>Result</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Alternative.AName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LPR.LName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Range)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AWeight)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Alternative.AName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LPR.LName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Range)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AWeight)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RNum }) |
            @Html.ActionLink("Details", "Details", new { id=item.RNum }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RNum })
        </td>
    </tr>
}

</table>
